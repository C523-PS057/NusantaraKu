pipeline {
    agent any

    environment {
        APP_ENV = 'production'
        APP_KEY = 'env.APP_KEY'
        DB_CONNECTION = 'mysql'
        DB_HOST = 'env.DB_HOST'
        DB_PORT = 'env.DB_PORT'
        DB_DATABASE = 'env.DB_DATABASE'
        DB_USERNAME = 'env.DB_USERNAME'
        DB_PASSWORD = 'env.DB_PASSWORD'
        MAIL_MAILER='smtp'
        MAIL_HOST='env.MAIL_HOST'
        MAIL_PORT='env.MAIL_PORT'
        MAIL_USERNAME='env.MAIL_USERNAME'
        MAIL_PASSWORD='env.MAIL_PASSWORD'
    }

    stages {
        stage('Checkout') {
            steps {
                script{
                    git url: 'https://github.com/C523-PS057/NusantaraKu.git'
                }
            }
        }

        stage('Build') {
            steps {
                echo "DB_HOST: ${env.DB_HOST}"
                echo "DB_PORT: ${env.DB_PORT}"
                echo "DB_DATABASE: ${env.DB_DATABASE}"
                echo "DB_USERNAME: ${env.DB_USERNAME}"
                echo "DB_PASSWORD: ${env.DB_PASSWORD}"
                sh 'composer install --no-interaction --prefer-dist'
                sh 'php artisan key:generate'
                sh 'php artisan migrate --force --seed'
            }
        }

        stage('Deploy') {
             steps {
                sh 'php artisan serve --port=8000'
            }
        }
    }
}
