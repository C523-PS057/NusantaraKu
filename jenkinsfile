pipeline {
    agent any

    stages {
        stage('Checkout external proj') {
            steps {
                git branch: 'backend',
                    credentialsId: 'd73702f4731cf2c500cb5ab1b3c482f74efee9be',
                    url: 'https://github.com/C523-PS057/NusantaraKu'
    
                sh "ls -lat"
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stages {
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                sh 'make publish'
            }
        }
    }
    }
}
