pipeline {
    agent any

    stages {
         stage('Checkout') {
            steps {
                git branch: 'backend', url: 'https://github.com/C523-PS057/NusantaraKu'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stages {
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                sh 'make publish'
            }
        }
    }
    }
}
