pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Checkout') {
            steps {
                script{
                    git url: 'https://github.com/C523-PS057/NusantaraKu.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn clean install'
                    def pom = readMavenPom file:'pom.xml'

                    print pom.version
                    env.version = pom.version
                }
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm run build' 
                sh 'npm start'
            }
        }
    }
}
